<%- include("../user/_header"); -%>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>บัญชีผู้ใช้</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f6f9;
        }

        /* Container สำหรับโปรไฟล์ */
        .profile-container {
            max-width: 900px;
            margin: 40px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        /* ส่วนของหัวข้อโปรไฟล์ */
        .profile-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .profile-header h1 {
            font-size: 2rem;
            color: #333;
            margin-bottom: 10px;
        }

        .profile-header p {
            font-size: 1.1rem;
            color: #7f8c8d;
            margin-bottom: 20px;
        }

        /* ตารางข้อมูลโปรไฟล์ */
        .profile-info {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-gap: 20px;
            margin-bottom: 30px;
        }

        .profile-info div {
            font-size: 1rem;
            color: #333;
        }

        .profile-info label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
        }

        .profile-info p {
            color: #7f8c8d;
            margin: 0;
        }

        .profile-info i {
            margin-right: 10px;
            color: #e67e22; /* สีส้ม */
        }

        /* ปุ่มแก้ไข */
        .btn {
            background-color: #e67e22; /* สีส้ม */
            color: #fff;
            padding: 12px 25px;
            border-radius: 5px;
            font-size: 1rem;
            margin-top: 25px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease-in-out;
        }

        .btn:hover {
            background-color: #d35400; /* ส้มเข้ม */
        }

        /* รูปโปรไฟล์ */
        .profile-picture {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 50%;
            cursor: pointer;
            transition: transform 0.2s ease;
            border: 3px solid #e67e22;
        }

        .profile-picture:hover {
            transform: scale(1.1);
        }

        /* ปรับรูปแบบตาราง */
        .table th, .table td {
            vertical-align: middle;
        }

        .table th {
            color: #333;
            font-weight: 600;
            width: 200px;
        }

        .table td {
            color: #7f8c8d;
        }

        /* ปรับรูปแบบ Modal */
        .modal-content {
            border-radius: 10px;
        }

        .modal-header {
            background-color: #f4f4f4;
            border-bottom: 1px solid #ddd;
        }

        .modal-footer button {
            border-radius: 8px;
        }

        /* ฟอร์มแก้ไขข้อมูล */
        .form-group {
            margin-bottom: 1.5rem;
        }

        /* รองรับการแสดงผลบนมือถือ */
        @media (max-width: 768px) {
            .profile-info {
                grid-template-columns: 1fr;
            }
        }

        .btn-secondary {
    background-color: #6c757d;  /* Light gray */
    border-color: #6c757d;      /* Same gray for border */
}

.btn-secondary:hover {
    background-color: #5a6268;  /* Slightly darker gray on hover */
    border-color: #545b62;      /* Darker gray on hover */
}

        .form-control:focus {
            box-shadow: 0 0 10px #bf360c; /* Darker shade for input focus */
            border-color: #bf360c; /* Matching focus border color */
        }
    </style>
</head>

<body>
<div class="container profile-container">
    <form id="profileForm" enctype="multipart/form-data">
        <div class="card">
            <div class="card-body text-center">
                <!-- Profile Picture -->
                <div class="form-group text-center mb-4">
                    <label for="profile_picture" class="form-label"></label><br>
                    <img 
                        src="<%= user.profile_picture ? user.profile_picture : '/images/default.png' %>" 
                        alt="Profile Picture" 
                        id="profilePreview" 
                        class="profile-picture">
                    <input type="file" 
                           name="profile_picture" 
                           id="profile_picture" 
                           class="form-control-file d-none" 
                           accept="image/*">
                </div>
                <script>
                    const profilePreview = document.getElementById('profilePreview');
                    const profilePictureInput = document.getElementById('profile_picture');
            
                    profilePreview.addEventListener('click', function() {
                        profilePictureInput.click();
                    });
            
                    profilePictureInput.addEventListener('change', async function(event) {
                        const file = event.target.files[0];
                        if (file) {
                            const validExtensions = ['image/jpeg', 'image/jpg', 'image/png'];
                            const maxSize = 2 * 1024 * 1024; // 2MB
            
                            if (!validExtensions.includes(file.type)) {
                                alert('อนุญาตเฉพาะไฟล์ .jpg .jpeg .png เท่านั้น');
                                profilePictureInput.value = '';
                                return;
                            }
            
                            if (file.size > maxSize) {
                                alert('ไฟล์ต้องมีขนาดไม่เกิน 2MB');
                                profilePictureInput.value = '';
                                return;
                            }
            
                            const reader = new FileReader();
                            reader.onload = function(e) {
                                profilePreview.src = e.target.result;
                            }
                            reader.readAsDataURL(file);
            
                            const formData = new FormData();
                            formData.append('profile_picture', file);
            
                            try {
                                const userId = "<%= user.id %>"; 
                                const response = await fetch(`/user/profile_picture/${userId}`, {
                                    method: 'POST',
                                    body: formData
                                });
            
                                if (response.ok) {
                                    console.log('Upload Success');
                                } else {
                                    console.error('Upload Failed');
                                    alert('อัปโหลดไม่สำเร็จ');
                                }
                            } catch (error) {
                                console.error('Upload Error:', error);
                                alert('เกิดข้อผิดพลาดในการอัปโหลด');
                            }
                        }
                    });
                </script>

                <!-- Username -->
                <h3 class="user-name"><%= user.username %></h3>
                <p class="user-role">
                    <% if (user.role === 1) { %>
                        <span class="badge bg-danger">ผู้ดูแลระบบ (Admin)</span>
                    <% } else { %>
                        <span class="badge bg-secondary">ผู้ใช้ทั่วไป (User)</span>
                    <% } %>
                </p>

                <!-- Profile Info -->
                <div class="profile-info">
                    <div>
                        <label for="name"><i class='bx bx-user'></i> ชื่อผู้ใช้:</label>
                        <p><%= user.name %></p>
                    </div>
                    <div>
                        <label for="email"><i class='bx bxl-gmail'></i> อีเมล:</label>
                        <p><%= user.email %></p>
                    </div>
                    <div>
                        <label for="phone"><i class='bx bx-phone'></i> เบอร์โทร:</label>
                        <p><%= user.phone %></p>
                    </div>
                    <div>
                        <label for="address"><i class='bx bx-home'></i> ที่อยู่:</label>
                        <p><%= user.address %></p>
                    </div>
                    <div>
                        <label for="membership_date"><i class='bx bx-calendar'></i> วันที่สมัคร:</label>
                        <p><%= new Date(user.membership_date).toLocaleDateString() %></p>
                    </div>
                </div>

                <!-- Edit Button -->
                <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#editUserModal">
                    <i class='bx bx-edit'></i> แก้ไขข้อมูล
                </button>
            </div>
        </div>
    </form>
</div>

<!-- Modal for Editing User Information -->
<div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/user/uedit/<%= user.id %>" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title" id="editUserModalLabel">แก้ไขบัญชี</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label for="username" class="form-label">ชื่อผู้ใช้</label>
                        <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
                        
                    </div>
                    <div class="form-group mb-3">
                        <label for="name" class="form-label">ชื่อ - นามสกุล</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">อีเมล</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="phone" class="form-label">เบอร์โทรศัพท์</label>
                        <input type="text" class="form-control" id="phone" name="phone" value="<%= user.phone %>" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="address" class="form-label">ที่อยู่</label>
                        <input type="text" class="form-control" id="address" name="address" value="<%= user.address %>" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">บันทึกการแก้ไข</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ปิด</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<%- include("../user/_footer"); -%>
